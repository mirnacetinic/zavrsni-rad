generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  HOST
}

enum Status {
  Active
  Canceled
  Inquiry
  Declined
  Accepted
}

enum ActiveStatus {
  Active
  Suspended
  Inactive
}

enum Report {
  Declined
  Reported
}

enum AccommodationType {
  House
  Villa
  Apartment
  Room
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  surname        String
  email          String          @unique
  country        String          @default("Croatia")
  hashPassword   String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  role           Role            @default(USER)
  status         ActiveStatus    @default(Active)
  accommodations Accommodation[]
  reservations   Reservation[]
  favourites     UserFavorites[]
}

model Location {
  id             Int             @id @default(autoincrement())
  country        String
  city           String
  zip            String          @unique
  accommodations Accommodation[]
}

model Accommodation {
  id          Int               @id @default(autoincrement())
  title       String
  type        AccommodationType
  status      ActiveStatus      @default(Active)
  description String
  locationId  Int
  location    Location          @relation(fields: [locationId], references: [id])
  address     String
  userId      Int
  user        User              @relation(fields: [userId], references: [id])
  units       Unit[]
  imageUrl    String?
}

model Unit {
  id              Int               @id @default(autoincrement())
  title           String
  type            AccommodationType
  description     String
  capacity        Int
  inquiry         Boolean
  bedrooms        Int
  bathrooms       Int      
  beds            Int    
  amenities       UnitAmenity[]
  accommodationId Int
  accommodation   Accommodation     @relation(fields: [accommodationId], references: [id], onDelete: Cascade)
  images          String[]          @default([])       
  imagesKeys      String[]          @default([])   
  likedBy         UserFavorites[]
  reservations    Reservation[]
  priceLists      PriceList[]
}

model Amenity {
  id    Int           @id @default(autoincrement())
  name  String
  units UnitAmenity[]
}

model UnitAmenity {
  amenity   Amenity @relation(fields: [amenityId], references: [id], onDelete: Cascade)
  amenityId Int
  unit      Unit    @relation(fields: [unitId], references: [id], onDelete: Cascade)
  unitId    Int

  @@id([amenityId, unitId])
}

model UserFavorites {
  unit   Unit @relation(fields: [unitId], references: [id], onDelete: Cascade)
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  unitId Int
  userId Int

  @@id([unitId, userId])
}

model Reservation {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  guests    Int
  checkIn   DateTime
  checkOut  DateTime
  unitId    Int
  unit      Unit     @relation(fields: [unitId], references: [id])
  status    Status   @default(Active)
  createdAt DateTime @default(now())
  price     Float
  paymentId String   @unique
  wasInquiry  Boolean @default(false)
  review    Review?
  guestReview   Int?
}

model Review {
  reservationId Int @id @unique
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  rating Int
  hostRating  Int
  experience  String
  createdAt DateTime  @default(now())
  status    Report? 
}

model PriceList {
  id        Int      @id @default(autoincrement())
  unitId    Int
  unit      Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  from      DateTime
  to        DateTime
  price     Float
  closed    Boolean  @default(false)
  deal      Int?
}

